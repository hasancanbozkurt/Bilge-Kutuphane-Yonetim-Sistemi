@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bilge Kütüphanesi Giriş Paneli</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <link href="~/webregister/css/font-awesome.css">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>
<body>
    <h1>Bilge Kütüphanesi Giriş Paneli</h1>
    <section class="register">
        <div class="register-full">
            <center>
                <div class="register">
                    <div class="logo">
                        <a href="/Vitrin/Index/"><span class="fa fa-book fa-4x"></span></a>
                    </div>
                </div>
            </center>
            </br>
        </div>
    </section>
    <div class=" w3l-login-form">
        <h2>Giriş Sayfası</h2>
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>KULLANICI E-POSTA:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="e-posta adresiniz" required="required" name="MAIL" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>ŞİFRE:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="şifreniz" required="required" name="SIFRE" />
                </div>
            </div>

            <button type="submit">GİRİŞ YAP</button>
        }
        <p class=" w3l-register-p">Kütüphanemizde Hesabınız Yok mu?<a href="/KayitOl/Kayit/" class="register"> Kayıt Ol</a></p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2024 Tüm hakları saklıdır |Tasarım ve Kodlama by <a href="https://hasancanbozkurt.com.tr/">Hasan Can BOZKURT</a></p>
    </footer>
</body>
</html>