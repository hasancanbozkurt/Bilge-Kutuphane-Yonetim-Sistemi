@using BilgeKutuphanesi.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<title>Yazarlar - Admin Paneli</title>
<h2>Yazarlar</h2>
<table class="table table-striped">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-default" style="background-color:lightseagreen">Yazarın Kitapları</a></td>
        </tr>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))