@model BilgeKutuphanesi.Models.Entity.TBLDuyurular
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<title>Duyuru Detayı - Admin Paneli</title>
@using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        <label>Duyuru ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label>Duyuru Kategori</label>
        @Html.TextBoxFor(k => k.KATEGORI, new { @class = "form-control", @readonly = "readonly", maxlength = "50" })
        <br />
        <label>Duyuru İçerik</label>
        @Html.TextAreaFor(k => k.ICERIK, new { @class = "form-control", maxlength = "250" })
        <br />
        <label>Duyuru Tarih</label>
        <input type="text" class="form-control" name="TARIH" value="@DateTime.Now.ToShortDateString()" />
        @*@Html.TextBoxFor(k => k.TARIH, new { @class = "form-control", maxlength = "11" })*@
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}