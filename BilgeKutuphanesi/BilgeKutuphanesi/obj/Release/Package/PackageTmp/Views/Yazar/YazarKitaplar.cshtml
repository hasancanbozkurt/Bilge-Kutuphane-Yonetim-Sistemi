@using BilgeKutuphanesi.Models.Entity;
@model List<TBLKitap>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<title>Yazarın Kitapları - Admin Paneli</title>
<h2>Kitap Yazarı: @ViewBag.y1</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>Kitap Adı</th>
        <th>Kategori</th>
        <th>Yayınevi</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.AD</td>
            <td>@x.TBLKategori.AD</td>
            <td>@x.YAYINEVI</td>
        </tr>
    }
</table>