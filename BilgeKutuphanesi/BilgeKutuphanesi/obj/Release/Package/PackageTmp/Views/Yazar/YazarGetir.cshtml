@model BilgeKutuphanesi.Models.Entity.TBLYazar
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<title>Yazar Güncelleme - Admin Paneli</title>

@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Yazar ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
            <br />
            <label>Yazar Adı</label>
            @Html.TextBoxFor(y => y.AD, new { @class = "form-control", maxlength = "30" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar Soyadı</label>
            @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control", maxlength = "30" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar Detay Bilgileri</label>
            @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control", maxlength = "1000" })
        </div>
        <button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>
    </div>
}


