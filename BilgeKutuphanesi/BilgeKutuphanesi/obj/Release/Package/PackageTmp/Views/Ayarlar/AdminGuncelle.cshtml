@model BilgeKutuphanesi.Models.Entity.TBLAdmin
@{
    ViewBag.Title = "AdminGuncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<title>Ayarlar - Admin Paneli</title>
@using (Html.BeginForm("AdminGuncelle", "Ayarlar", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        <label>ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(k => k.Kullanici, new { @class = "form-control", maxlength = "30" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(k => k.Sifre, new { @class = "form-control", maxlength = "20" })
        <br />
        <label>Yetki</label>
        @Html.TextBoxFor(k => k.Yetki, new { @class = "form-control", maxlength = "1" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

