@using BilgeKutuphanesi.Models.Entity;
@model List<TBLDuyurular>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Duyurular</h2>
<table class="table table-bordered">
    <tr>
        <th>Duyuru Başlığı</th>
        <th>Duyuru Yayınlanma Tarihi</th>
        <th>Duyuru Detayı</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.KATEGORI</td>
            <td>@Convert.ToDateTime(prs.TARIH).ToString("dd/MM/yyyy")</td>
            <td>@prs.ICERIK</td>
        </tr>
    }
</table>

