@using BilgeKutuphanesi.Models.Entity
@model List<TBLKitapTakip>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}
<h4>Kitap Listem</h4>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                            <div class="card-header p-2">
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <div class="timeline timeline-inverse">
                                        @foreach (var item in Model)

                                        {
                                            <div class="time-label">
                                                <a class="btn btn-success">
                                                    <span class="bg-success">
                                                        @(((DateTime)item.ALISTARIHI).ToString("dd-MMM-yyyy"))
                                                    </span>
                                                </a>
                                                -----
                                                <a class="btn btn-warning">
                                                    <span class="bg-warning">
                                                        @if (item.UYEGETIRTARIH != null)
                                                        {
                                                            @(((DateTime)item.UYEGETIRTARIH).ToString("dd-MMM-yyyy"))
                                                        }
                                                        else
                                                        {
                                                            <span style="color: red;">Henüz iade edilmedi</span>
                                                        }
                                                    </span>
                                                </a>
                                            </div>
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            <div>
                                                   <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        <a class="btn btn-dark">
                                                            <span class="bg-dark">
                                                                Kitap Yazarı: @item.TBLKitap.TBLYazar.AD
                                                                @item.TBLKitap.TBLYazar.SOYAD
                                                            </span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                  </div>               
            </div>
        </div>
    </section>
</body>