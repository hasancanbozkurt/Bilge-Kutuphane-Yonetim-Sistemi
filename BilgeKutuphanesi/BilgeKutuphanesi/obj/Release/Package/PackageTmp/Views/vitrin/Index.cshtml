@model BilgeKutuphanesi.Models.Siniflarim.Class1

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bilge Kütüphane Yönetim Sistemi</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/web/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="~/web/css/freelancer.min.css" rel="stylesheet">
    <link href="/webregister/css/font-awesome.css" rel="stylesheet">
</head>
<body id="page-top">
    <nav class="navbar navbar-expand-lg bg-secondary fixed-top" id="mainNav">
        <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="#page-top"><i class="fa fa-book" aria-hidden="true"> </i> Bilge Kütüphanesi</a>
                <button class="navbar-toggler navbar-toggler-right font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menü
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Kitaplarımız</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">Hakkımızda</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">İletişim</a>
                        </li>
                        @{
                            bool userLoggedIn = Session["Mail"] != null;
                        }

                        @if (!userLoggedIn)
                        {

                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" style="color: #fc3955;" href="@Url.Action("Kayit", "KayitOl")">Kayıt Ol</a>
                    </li>

                            <li class="nav-item mx-0 mx-lg-1">
                                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="@Url.Action("GirisYap", "Login")">Giriş</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mx-0 mx-lg-1">
                                <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" style="color: #aaff31;" href="@Url.Action("Index", "Panelim")">Panelim</a>
                            </li>
                        }
                    </ul>
                </div>
        </div>
    </nav>
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <img class="masthead-avatar mb-5" src="~/web/img/hg.png" alt="">
            <h1 class="masthead-heading mb-0">Hoş Geldiniz!</h1>
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <p class="masthead-subheading font-weight-light mb-0">
                <div class="row">
                    @foreach (var x in Model.Deger2)
                    {
                        @x.SLOGAN
                    }
                </div>
            </p>
        </div>
    </header>
    <section class="page-section portfolio" id="portfolio">
        <div class="container">
            <h2 class="page-section-heading text-center text-secondary mb-0">En Son Eklenen Kitaplarımız</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            @if (Model.Deger1 != null && Model.Deger1.Any())
            {
                <div class="row">
                    @foreach (var x in Model.Deger1)
                    {
                        if (!string.IsNullOrEmpty(x.KITAPRESIM))
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="portfolio-item mx-auto">
                                    <img class="img-fluid" src="@Url.Content(x.KITAPRESIM)" alt="Kitap Resmi">
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="portfolio-item mx-auto">
                                    <img class="img-fluid" src="~/Image/default.jpg" alt="Kitap Resmi">
                                </div>
                            </div>
                        }
                    }
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <p>Kitap görselleri yüklenemedi veya mevcut değil.</p>
                    </div>
                </div>
            }


        </div>
    </section>
    <section class="page-section bg-primary text-white mb-0" id="about">
        <div class="container">
            <h2 class="page-section-heading text-center text-white">Hakkımızda</h2>
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>        
            <div class="row">
                <center>
                    @foreach (var x in Model.Deger2)
                    {
                        @x.ACIKLAMA
                    }
                    </center>
            </div>            
        </div>
    </section>
    <section class="page-section" id="contact">
        <div class="container">
            <h2 class="page-section-heading text-center text-secondary mb-0">İletişim</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>
            <div id="messageDiv"></div>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    @using (Html.BeginForm("Index", "vitrin", FormMethod.Post))
                    {
                    <form name="sentMessage" id="contactForm" novalidate="novalidate">
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>İsim</label>
                                <input class="form-control" id="name" name="AD" type="text" placeholder="İsim" required="required" maxlength="30" data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>E-Posta</label>
                                <input class="form-control" id="email" name="MAIL" type="email" placeholder="E-Posta" required="required" maxlength="30" data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Konu</label>
                                <input class="form-control" id="phone" name="KONU" type="tel" placeholder="Konu" required="required" maxlength="20" data-validation-required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                <label>Mesaj</label>
                                <textarea class="form-control" id="message" name="MESAJ" rows="5" placeholder="Mesaj" required="required" maxlength="1000" onkeyup="checkWordCount()" data-validation-required-message="Lütfen bir mesaj giriniz."></textarea>
                                <p class="help-block text-danger" id="wordCountMessage"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton" disabled>Gönder</button>
                        </div>
                        <script>
                            function checkWordCount() {
                                var message = document.getElementById("message").value;
                                var words = message.trim().split(/\s+/);
                                var wordCount = words.filter(function (word) {
                                    return word.length > 0;
                                }).length;

                                var messageParagraph = document.getElementById("wordCountMessage");
                                var submitButton = document.getElementById("sendMessageButton");

                                if (wordCount > 100) {
                                    messageParagraph.textContent = "Mesaj 100 kelimeden fazla olamaz.";
                                    submitButton.disabled = true;
                                } else {
                                    messageParagraph.textContent = "";
                                    submitButton.disabled = false;
                                }
                            }
                        </script>
                    </form>}
                </div>
            </div>
        </div>
    </section>
    <section class="copyright py-4 text-center text-white">
        <div class="container">
            <small>&copy; 2024 Tüm hakları saklıdır | Tasarım ve Kodlama by <a href="https://hasancanbozkurt.com.tr/">Hasan Can BOZKURT</a></small>
        </div>
    </section>
    <div class="scroll-to-top d-lg-none position-fixed ">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>
    <script src="~/web/vendor/jquery/jquery.min.js"></script>
    <script src="~/web/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/web/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/web/js/jqBootstrapValidation.js"></script>
    <script src="js/contact_me.js"></script>
    <script src="~/web/js/freelancer.min.js"></script>
</body>
</html>

